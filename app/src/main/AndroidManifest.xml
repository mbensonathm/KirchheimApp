<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elmedin.kirchheim">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.AppBarOverlay"
            >

            <!--android:theme="@style/AppTheme"-->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImpressumActivity"
            android:label="@string/title_activity_impressum"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.elmedin.kirchheim.MainActivity" />
        </activity>
        <activity
            android:name=".LokaleActivity"
            android:label="@string/title_activity_lokale"
            android:parentActivityName=".MainActivity"
            android:theme="@style/globalTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.elmedin.kirchheim.MainActivity" />
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".MainPage"
            android:theme="@style/globalTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.elmedin.kirchheim.MainPage" />
        </activity>
        <activity android:name=".Menu2Activity"></activity>
    </application>

</manifest>
